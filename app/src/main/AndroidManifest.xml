<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhukov.minesweeper">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MenuActivity"
            android:label="@string/title_activity_menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BoardActivity"
            android:label="@string/title_activity_board" />
        <activity
            android:name=".activity.NewGameActivity"
            android:label="@string/title_activity_new_game"></activity>
        <activity
            android:name="com.zhukov.minesweeper.menu.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>
